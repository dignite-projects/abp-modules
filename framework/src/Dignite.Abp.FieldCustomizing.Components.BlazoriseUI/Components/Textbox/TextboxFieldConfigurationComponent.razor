@using Dignite.Abp.FieldCustomizing.Components
@using Dignite.Abp.FieldCustomizing.Fields
@using Dignite.Abp.FieldCustomizing.Fields.Textbox
@inherits FieldConfigurationComponentBase<TextboxFieldProvider,TextboxConfiguration>

<Validation>
    <Field>
        <FieldLabel>@L["FieldDisplayName"]</FieldLabel>
        <TextEdit @bind-Text="@Definition.DisplayName" />
    </Field>
</Validation>
<Validation>
    <Field>
        <FieldLabel>@L["FieldName"]</FieldLabel>
        <TextEdit MaxLength="64" @bind-Text="@Definition.Name" />
    </Field>
</Validation>

<Validation>
    <Field>
        <FieldLabel>@L["Description"]</FieldLabel>
        <TextEdit @bind-Text="@Configuration.Description" />
    </Field>
</Validation>
<Field>
    <Check TValue="bool" @bind-Checked="@Configuration.Required">@L["IsRequired"]</Check>
</Field>
<Validation>
<Field>
    <FieldLabel>@L["Placeholder"]</FieldLabel>
    <TextEdit @bind-Text="@Configuration.Placeholder" />
</Field>
</Validation>
<Validation>
<Field>
    <FieldLabel>@L["DefaultValue"]</FieldLabel>
    <TextEdit @bind-Text="@Definition.DefaultValue" />
</Field>
</Validation>
<Field>
    <FieldLabel>@L["TextboxMode"]</FieldLabel>
    <RadioGroup TValue="TextboxMode" Name="textboxMode" @bind-CheckedValue="@Configuration.Mode">
        <Radio TValue="TextboxMode" Value="@TextboxMode.SingleLine">@L["SingleLine"]</Radio>
        <Radio TValue="TextboxMode" Value="@TextboxMode.MultipleLine">@L["MultipleLine"]</Radio>
    </RadioGroup>
</Field>
<Field>
    <FieldLabel>@L["CharLimit"]</FieldLabel>
    <NumericEdit @bind-Value="@Configuration.CharLimit" />
</Field>

