@using Dignite.Abp.FieldCustomizing.Forms.Switch
@inherits FieldConfigurationComponentBase<SwitchFormProvider,SwitchConfiguration>

<Validation>
    <Field>
        <FieldLabel>@L["FieldDisplayName"]</FieldLabel>
        <TextEdit @bind-Text="@FieldDefinition.DisplayName" />
    </Field>
</Validation>
<Validation>
    <Field>
        <FieldLabel>@L["FieldName"]</FieldLabel>
        <TextEdit MaxLength="64" @bind-Text="@FieldDefinition.Name" />
    </Field>
</Validation>

<Validation>
    <Field>
        <FieldLabel>@L["Description"]</FieldLabel>
        <TextEdit @bind-Text="@Configuration.Description" />
    </Field>
</Validation>
<Field>
    <Check TValue="bool" Checked="@(Checked(FieldDefinition.DefaultValue))" CheckedChanged="OnChecked">@L["DefaultValue"]</Check>
</Field>

@code{


    private bool Checked(string defaultValue)
    {
        bool defaultChecked= false;
        bool.TryParse(defaultValue, out defaultChecked);
        return defaultChecked;
    }

    private void OnChecked(bool value)
    {
        FieldDefinition.DefaultValue = value.ToString();
    }
}