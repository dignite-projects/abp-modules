@using Dignite.Abp.FieldCustomizing.Forms.DateEdit
@inherits FieldConfigurationComponentBase<DateEditFormProvider,DateEditConfiguration>

<Validation>
    <Field>
        <FieldLabel>@L["FieldDisplayName"]</FieldLabel>
        <TextEdit @bind-Text="@FieldDefinition.DisplayName" />
    </Field>
</Validation>
<Validation>
    <Field>
        <FieldLabel>@L["FieldName"]</FieldLabel>
        <TextEdit MaxLength="64" @bind-Text="@FieldDefinition.Name" />
    </Field>
</Validation>

<Validation>
    <Field>
        <FieldLabel>@L["Description"]</FieldLabel>
        <TextEdit @bind-Text="@Configuration.Description" />
    </Field>
</Validation>
<Field>
    <Check TValue="bool" @bind-Checked="@Configuration.Required">@L["IsRequired"]</Check>
</Field>
<Validation>
<Field>
    <FieldLabel>@L["DateEditMode"]</FieldLabel>
    <RadioGroup TValue="Dignite.Abp.FieldCustomizing.Forms.DateEdit.DateInputMode" Name="DateInputMode" @bind-CheckedValue="@Configuration.InputMode">
        <Radio TValue="Dignite.Abp.FieldCustomizing.Forms.DateEdit.DateInputMode" Value="@Dignite.Abp.FieldCustomizing.Forms.DateEdit.DateInputMode.Date">@L["Date"]</Radio>
        <Radio TValue="Dignite.Abp.FieldCustomizing.Forms.DateEdit.DateInputMode" Value="@Dignite.Abp.FieldCustomizing.Forms.DateEdit.DateInputMode.DateTime">@L["DateTime"]</Radio>
        <Radio TValue="Dignite.Abp.FieldCustomizing.Forms.DateEdit.DateInputMode" Value="@Dignite.Abp.FieldCustomizing.Forms.DateEdit.DateInputMode.Month">@L["Month"]</Radio>
    </RadioGroup>
</Field>
</Validation>
<Field>
    <FieldLabel>@L["Max"]</FieldLabel>
    <DateEdit TValue="DateTimeOffset?" InputMode="Blazorise.DateInputMode.DateTime" @bind-Date="@Configuration.Max" />
</Field>
<Field>
    <FieldLabel>@L["Min"]</FieldLabel>
    <DateEdit TValue="DateTimeOffset?" InputMode="Blazorise.DateInputMode.DateTime" @bind-Date="@Configuration.Min" />
</Field>

